<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BookCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/bookCardElevation</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/bookCardCornerRadius</item>
    </style>

    <style name="CardviewContentWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/cardviewContentPadding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BookImageView">
        <item name="android:contentDescription">@string/content_description</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">@dimen/bookImageWidth</item>
        <item name="android:layout_height">@dimen/bookImageHeight</item>
    </style>

    <style name="DescriptionWrapper">
        <item name="android:paddingStart">@dimen/descriptionWrapperPaddingStart</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BookTitle">
        <item name="android:ellipsize">none</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bookTitleTextSize</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BookAuthor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="RootCellLayout">
        <item name="android:paddingStart">@dimen/rootCellLayoutPaddingStartAndEnd</item>
        <item name="android:paddingEnd">@dimen/rootCellLayoutPaddingStartAndEnd</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BookListRecyclerView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BookSearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:layout_height">@dimen/searchViewHeight</item>
    </style>

    <style name="ItemsTotal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RootActivityLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
